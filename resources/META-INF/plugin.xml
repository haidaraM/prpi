<idea-plugin version="2">
    <id>com.prpi</id>
    <name>Prpi</name>
    <version>1.0</version>
    <vendor email="prpi@prpi.com" url="http://www.yourcompany.com">Prpi</vendor>

    <description><![CDATA[
      A plugin for collaborative editing in Intellij Platform.
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <!-- Project wizard -->
    <extensions defaultExtensionNs="com.intellij">
        <moduleBuilder builderClass="com.prpi.wizard.JoinProjectBuilder" id="Join Project" order="first"/>
        <moduleType id="SHARED_MODULE" implementationClass="com.prpi.wizard.JoinProjectModule"/>
    </extensions>

    <actions>
        <!-- Menu actions -->
        <group id="prpi.Prpi" text="PrPi" description="PrPi for collaboration">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="prpi.HostProject" class="com.prpi.actions.HostProject" text="Host Project"
                    description="Open this project for collaboration"/>
            <action id="prpi.EditProjectConfiguration" class="com.prpi.actions.EditProjectConfiguration" text="Edit Shared Project Configuration"
                    description="Edit the current project configuration about collaboration"/>
        </group>
    </actions>

    <application-components>
        <component>
            <implementation-class>com.prpi.PrPiApplicationComponent</implementation-class>
        </component>
        <component>
            <implementation-class>com.prpi.actions.ActionStartupConfigurator</implementation-class>
        </component>
    </application-components>
</idea-plugin>